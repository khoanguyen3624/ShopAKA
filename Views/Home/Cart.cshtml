@{
    ViewBag.Title = "ShopAKA - Giỏ Hàng";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/Cart.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="cart-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <a href="@Url.Action("Index", "Home")" class="back-btn me-3">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                        <h1 class="cart-title">Giỏ Hàng</h1>
                    </div>
                </div>
                <div class="col-md-6">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-end">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                            <li class="breadcrumb-item active">Giỏ hàng</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container cart-container">
        <div id="cartContent">
            <div class="row">
                <div class="col-lg-8">
                    <div class="cart-section">
                        <div class="section-header">
                            <h3 class="section-title">
                                <i class="fas fa-shopping-cart me-2"></i>
                                Sản phẩm trong giỏ hàng
                            </h3>
                            <span class="item-count" id="cartItemCount">(0 sản phẩm)</span>
                        </div>

                        <div class="cart-items" id="cartItemsContainer">
                            <!-- Cart items will be loaded dynamically from sessionStorage -->
                        </div>
                        
                        <div class="cart-actions mt-4">
                            <button class="continue-btn" onclick="continueShopping()">
                                <i class="fas fa-arrow-left me-2"></i>
                                Tiếp Tục Mua Sắm
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="order-summary">
                        <div class="summary-header">
                            <h3 class="summary-title">Tóm Tắt Đơn Hàng</h3>
                        </div>
                        
                        <div class="summary-content">
                            <div class="summary-row">
                                <span class="summary-label">Tạm tính:</span>
                                <span class="summary-value" id="subtotal">80.960.000₫</span>
                            </div>
                            
                            <div class="summary-row">
                                <span class="summary-label">Giảm giá:</span>
                                <span class="summary-value discount" id="discount">-3.000.000₫</span>
                            </div>
                            
                            <div class="summary-row">
                                <span class="summary-label">Phí vận chuyển:</span>
                                <span class="summary-value free" id="shipping">Miễn phí</span>
                            </div>
                            
                            <div class="summary-divider"></div>
                            
                            <div class="summary-row total-row">
                                <span class="summary-label">Tổng cộng:</span>
                                <span class="summary-value total" id="total">77.960.000₫</span>
                            </div>
                        </div>

                        <div class="shipping-info">
                            <i class="fas fa-truck"></i>
                            <span>Bạn đã được miễn phí vận chuyển cho đơn hàng này!</span>
                        </div>

                        <div class="checkout-actions">
                            <button class="checkout-btn" id="checkoutBtn" onclick="proceedToCheckout()" style="display: none;">
                                <i class="fas fa-credit-card me-2"></i>
                                Thanh Toán Ngay
                            </button>
                        </div>

                        <div class="security-info">
                            <div class="security-item">
                                <i class="fas fa-shield-alt"></i>
                                <span>Thanh toán an toàn</span>
                            </div>
                            <div class="security-item">
                                <i class="fas fa-truck"></i>
                                <span>Giao hàng nhanh chóng</span>
                            </div>
                            <div class="security-item">
                                <i class="fas fa-undo"></i>
                                <span>Đổi trả dễ dàng</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="emptyCart" class="empty-cart" style="display: none;">
            <div class="empty-cart-icon">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <h4>Giỏ hàng trống</h4>
            <p>Bạn chưa có sản phẩm nào trong giỏ hàng</p>
            <button class="checkout-btn" onclick="continueShopping()">
                <i class="fas fa-shopping-bag me-2"></i>
                Tiếp Tục Mua Sắm
            </button>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/Cart.js"></script>
</body>
</html>