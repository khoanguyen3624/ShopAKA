@model IEnumerable<ShopAKA.Models.Category>

@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="~/Content/Categories.css" rel="stylesheet" />
}

<div class="category-header">
    <h2><i class="fa fa-list"></i> Quản lý danh mục</h2>
    @Html.ActionLink("+ Tạo mới", "Create", null, new { @class = "btn-create" })
</div>

<div class="category-table-container">
    @if (Model != null && Model.Any())
    {
        <table class="table category-table">
            <thead>
                <tr>
                    <th>Tên danh mục</th>
                    <th>Tổng số sản phẩm</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span class="category-name">@Html.DisplayFor(modelItem => item.CategoryName)</span>
                        </td>
                        <td>
                            <span class="product-count">@(item.Product != null ? item.Product.Count : 0)</span>
                        </td>
                        <td class="action-buttons">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.CategoryID }, new { @class = "btn-custom btn-edit" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn-custom btn-delete" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="empty-state">
            <i class="fa fa-inbox"></i>
            <p>Chưa có danh mục nào</p>
            @Html.ActionLink("Tạo danh mục đầu tiên", "Create", null, new { @class = "btn-create" })
        </div>
    }
</div>

@section Scripts {
    <script src="~/Scripts/categories.js"></script>
}
