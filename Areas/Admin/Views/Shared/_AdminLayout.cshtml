@inherits System.Web.Mvc.WebViewPage
@using System.Web.Mvc
@using System.Web.Mvc.Html
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .main-content {
            flex: 1;
        }

        .admin-footer {
            background-color: #343a40;
            color: #fff;
            padding: 20px 0;
            margin-top: auto;
            text-align: center;
        }

            .admin-footer p {
                margin: 5px 0;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
        <a class="navbar-brand fw-bold" href="#">Admin Dashboard</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="adminNavbar">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Categories")">
                        <i class="fa fa-list"></i> Quản lý danh mục
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Products")">
                        <i class="fa fa-box"></i> Quản lý hàng hóa
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("StockAvailable", "Warehouse")">
                        <i class="fa fa-warehouse"></i> Kho hàng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Users")">
                        <i class="fa fa-user-shield"></i> Người dùng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Customers")">
                        <i class="fa fa-users"></i> Khách hàng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Orders")">
                        <i class="fa fa-file-invoice"></i> Đơn hàng
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link text-warning" href="@Url.Action("Index", "Home", new { area = "" })">
                        <i class="fa fa-home"></i> Quay lại trang khách
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container mt-4 main-content">
        @RenderBody()
    </div>
    <footer class="admin-footer">
        <p>&copy; 2025 | AKAShop</p>
        <p>Thành viên nhóm</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
